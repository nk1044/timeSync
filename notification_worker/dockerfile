FROM node:18-slim

# Set working directory
WORKDIR /app

# Copy package files first (for better cache)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source and required config files
COPY tsconfig.json ./
COPY src ./src

# Build the project (TypeScript â†’ JavaScript)
RUN npm run build

# Expose port (optional, for dev/test)
EXPOSE 8001

# Run the compiled JS
CMD ["node", "dist/index.js"]
